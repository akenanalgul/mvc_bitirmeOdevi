@model MVC_StokTakipOtomasyonu2.Models.Entity.Kategoriler
@{
    ViewBag.Title = "GuncelleBilgiGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GuncelleBilgiGetir</h2>

<div class="container">
    <form action="/Home/Guncelle/">
        <div class="form-group">
            <b>ID</b>
            @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <b>Kategori</b>
            @Html.TextBoxFor(x => x.Kategori, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <b>Aciklama</b>
            @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
        </div>
        <div><button class="btn btn-primary">Kategori Güncelle</button></div>

    </form>
</div>

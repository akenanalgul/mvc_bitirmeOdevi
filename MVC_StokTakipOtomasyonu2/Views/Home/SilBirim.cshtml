@model MVC_StokTakipOtomasyonu2.Models.Entity.Birimler
@{
    ViewBag.Title = "SilBirim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kategori Silme Sayfası</h2>

<div class="container">
    @using (Html.BeginForm("SilBirim2", "Home"))
    {
        <h1></h1>
        <h4>Kayıt Silinsin mi?</h4>
        <div class="form-group">
            @Html.HiddenFor(x => x.ID)
            @Html.LabelFor(x => x.Birim)
            @Html.DisplayFor(x => x.Birim, new { @class = "form-control" })
        </div>
        <div>
            @Html.LabelFor(x => x.Aciklama)
            @Html.DisplayFor(x => x.Aciklama, new { @class = "form-control" })
        </div>
        
        <div>
            <button class="btn btn-danger">Kategori Sil</button>
            <a href="/Birimler/Products">Ana Sayfa</a>
        </div>
    }

</div>


@model MVC_StokTakipOtomasyonu2.Models.Entity.Birimler
@using System.Web.Mvc.Html

@{
    ViewBag.Title = "EkleBirim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Birim Ekleme</h2>

<div class="container">
    @using (Html.BeginForm("EkleBirim2", "Home", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(x => x.Birim)
            @Html.TextBoxFor(x => x.Birim, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Aciklama)
            @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <button class="btn btn-success">Birim Ekle</button>
        </div>
    }
</div>

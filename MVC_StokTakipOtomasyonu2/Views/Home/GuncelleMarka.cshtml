@model MVC_StokTakipOtomasyonu2.Models.Entity.Markalar
@{
    ViewBag.Title = "GuncelleMarka";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Marka Güncelle</h2>

<div class="container">
    <form action="/Home/GuncelleMarka2/">
        <div class="form-group">
            <b>ID</b>
            @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <b>Kategori</b>
            @Html.TextBoxFor(x => x.Kategoriler.Kategori, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <b>Marka</b>
            @Html.TextBoxFor(x => x.Marka, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <b>Aciklama</b>
            @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
        </div>
        <div><button class="btn btn-primary">Marka Güncelle</button></div>

    </form>
</div>

